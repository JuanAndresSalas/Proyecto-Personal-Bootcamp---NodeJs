{{#> template}}

<main id="main-login">
    <div class="card" >

        <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="ingreso" method="post" id="form-login">
                <div class="mb-3">
                    <label for="user" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="user" name="username" required>
                    
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                {{#if message.error}}
                    <div class="alert alert-danger">{{message.error}}</div>
                {{/if}}
                <button type="submit" class="btn btn-dark btn-login" >Ingresar</button>
            </form>
            
        </div>
        <div class="card-footer" >
            <p>¿No tienes una cuenta? Regístrate!</p>
            <button class="btn btn-dark btn-login"><a href="/registro" style="color: white">Registrarse</a></button>
        </div>
    </div>
</main>
{{/template}}

{{#if mensaje}}
    <div class="modal fade" tabindex="-1" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>{{mensaje}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        window.addEventListener('load', function () {
            var modal = document.getElementById('myModal');
            var modalInstance = new bootstrap.Modal(modal);
            modalInstance.show();
        });

    </script>
{{/if}}