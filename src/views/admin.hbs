{{#> template}}


<main id="main-admin">
    <button class="btn btn-dark" id="btn-mostrar-usuarios" onclick="mostrarUsuarios()">Mostrar Usuarios</button>
    <button class="btn btn-dark" id="btn-mostrar-ofertas" onclick="mostrarOfertas()">Mostrar Ofertas</button>
    <table class="table" id="tabla-usuarios" style="display: none;">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Correo</th>
                <th scope="col">N° Ofertas Aportadas</th>
            </tr>
        </thead>
        <tbody>
            {{#each info}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{nombre}} {{apellido}}</td>
                <td>{{correo}}</td>
                <td>{{cantidadOfertas}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <button class="btn btn-dark" id="btn-ocultar-usuarios" style="display: none;" onclick="ocultarUsuarios()">Ocultar
        Usuarios</button>
    <table class="table" id="tabla-ofertas" style="display: none;">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Lugar</th>
                <th scope="col">Imagen</th>
                <th scope="col">Descripción</th>
                <th scope="col">Precio</th>
                <th scope="col">Coordenadas</th>
                <th scope="col">Subcategoría</th>
                <th scope="col">Categoría</th>
                <th scope="col">Editar</th>
                <th scope="col">Borrar</th>
            </tr>
        </thead>
        <tbody>
            {{#each ofertas}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{lugar}}</td>
                <td>{{imagen}}</td>
                <td>{{descripcion}}</td>
                <td>{{precio}}</td>
                <td>{{latitud}}, {{longitud}}</td>
                <td>{{subcategoria}}</td>
                <td>{{categoria}}</td>
                <td><button class="btn btn-success" value={{id}}>Editar</button></td>
                <td><button type="button" value={{id}} class="btn btn-danger btn-eliminar" data-bs-toggle="modal" data-bs-target="#confirmar-eliminar">Eliminar</button></td>

            </tr>
            {{/each}}
        </tbody>
    </table>
    <button class="btn btn-dark" id="btn-ocultar-ofertas" style="display: none;" onclick="ocultarOfertas()">Ocultar Ofertas</button>
    <!-- Modal -->
    <div class="modal fade" id="confirmar-eliminar" tabindex="-1" aria-labelledby="confirmar-eliminar" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmar-eliminarLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>¿Desea eliminar oferta?</h4>
                    <div  style="display: flex;">
                        <h5>ID Oferta: </h5><h5 id="id-oferta-modal"></h5>
                    </div>                   
                </div>
                <div class="modal-footer">
                    <button type="button" id="confirmar-eliminacion" class="btn btn-danger" >Eliminar</button>
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</main>


{{/template}}

<script src="js/admin.js"></script>